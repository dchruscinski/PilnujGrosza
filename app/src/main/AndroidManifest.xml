<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.dchruscinski.pilnujgrosza">
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <queries>
        <package android:name="pl.dchruscinski.pilnujgrosza" />
        <intent>
            <action android:name="android.intent.action.INSERT" />
            <data android:mimeType="vnd.android.cursor.dir/event" />
        </intent>
        <intent>
            <action android:name="android.intent.action.EDIT" />
            <data android:mimeType="vnd.android.cursor.dir/event" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pilnuj_grosza_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pilnuj_grosza_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PilnujGrosza.Launcher">
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.Statistics"
            android:parentActivityName=".FinanceManagement"
            android:label="@string/title_activity_statistics" />
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.StatisticsPresentation"
            android:parentActivityName=".FinanceManagement"
            android:label="@string/title_activity_statistics" />
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.Receipt"
            android:parentActivityName=".MainMenu"
            android:label="@string/title_activity_receipt" />
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.ShoppingList"
            android:parentActivityName=".MainMenu"
            android:label="@string/title_activity_shopping_list" />
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.Settings"
            android:parentActivityName=".MainMenu"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.ExpenseCategory"
            android:parentActivityName=".FinanceManagement"
            android:label="@string/title_activity_expense_category" />
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.IncomeCategory"
            android:parentActivityName=".FinanceManagement"
            android:label="@string/title_activity_income_category" />
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.FinanceManagement"
            android:parentActivityName=".MainMenu"
            android:label="@string/title_activity_financeManagement" />
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.Transaction"
            android:parentActivityName=".FinanceManagement"
            android:label="@string/title_activity_transaction" />
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.BudgetTransaction"
            android:parentActivityName=".Budget"
            android:label="@string/title_activity_budgettransaction" />
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.Shopping"
            android:parentActivityName=".ShoppingList"
            android:label="@string/title_activity_shopping" />
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.Budget"
            android:parentActivityName=".FinanceManagement"
            android:label="@string/title_activity_budget" />
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.ScheduledPayment"
            android:parentActivityName=".FinanceManagement"
            android:label="@string/title_activity_scheduled_payment">

            <intent-filter>
                <action android:name="android.intent.action.INSERT" />
                <data android:mimeType="vnd.android.cursor.dir/event" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.EDIT" />
                <data android:mimeType="vnd.android.cursor.dir/event" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <activity
            android:name="pl.dchruscinski.pilnujgrosza.MainMenu"
            android:label="@string/title_activity_menu" />
        <activity
            android:name="pl.dchruscinski.pilnujgrosza.Profile" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name= ".NotificationPublisher" />

    </application>

</manifest>