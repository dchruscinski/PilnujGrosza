<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PilnujGrosza" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorForDarkMode</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorForDarkMode</item>
        <item name="colorOnPrimary">@color/primaryTextColorForDarkMode</item>
        <item name="colorPrimarySurface">@color/primaryLightColorForDarkMode</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorForDarkMode</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorForDarkMode</item>
        <item name="colorOnSecondary">@color/secondaryTextColorForDarkMode</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blackBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/backgroundForDarkMode</item>
        <item name="colorSurface">@color/primaryColorForDarkMode</item>
    </style>

    <style name="Theme.PilnujGrosza.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen_night</item>
    </style>

    <style name="Theme.PilnujGrosza.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PilnujGrosza.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorOnPrimary">@color/primaryTextColorForDarkMode</item>
    </style>

    <style name="Theme.PilnujGrosza.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>