<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context="pl.dchruscinski.pilnujgrosza.Settings" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/set_currency_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/set_currency_info"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/set_currency_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_toEndOf="@id/set_currency_info"
            android:inputType="text"
            android:maxLength="4"
            android:singleLine="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/set_people_in_household_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_currency_info"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/set_people_in_household_info"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/set_people_in_household_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_currency_info"
            android:layout_margin="20dp"
            android:layout_toEndOf="@id/set_people_in_household_info"
            android:inputType="number"
            android:maxLength="2"
            android:singleLine="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/set_notifications_time_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_people_in_household_info"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/set_notifications_time_info"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/set_notifications_time_info_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_people_in_household_info"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/set_notifications_time_info"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/set_notifications_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_notifications_time_info"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="@string/set_notifications_time_button" />

        <TextView
            android:id="@+id/set_editBalance_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_notifications_time_button"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/set_editBalance_info"
            android:textSize="20sp" />

        <Button
            android:id="@+id/set_editBalance_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_editBalance_info"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="@string/set_editBalance_button" />

        <TextView
            android:id="@+id/set_night_mode_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_editBalance_button"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/set_night_mode_info"
            android:textSize="20sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/set_night_mode_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_editBalance_button"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/set_night_mode_info" />

        <Button
            android:id="@+id/set_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_night_mode_info"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:text="@string/set_save_button" />

    </RelativeLayout>
</ScrollView>