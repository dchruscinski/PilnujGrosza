<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true" >

        <ImageView
            android:id="@+id/profile_showPIN_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/pilnuj_grosza_logo_foreground"
            android:scaleType="center"
            android:scaleX="3"
            android:scaleY="3" >
        </ImageView>

        <TextView
            android:id="@+id/profile_showPIN_info_helperquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_below="@+id/profile_showPIN_logo"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="@string/profile_showPIN_info_helperquestion" >
        </TextView>

        <TextView
            android:id="@+id/profile_showPIN_info_helperquestion_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_below="@+id/profile_showPIN_info_helperquestion"
            android:textSize="18sp"
            android:text="Poniżej znajduje sie nowy kod PIN, \nktóry, ze względów bezpieczeństwa, \nnależy jak najszybciej zmienić." >
        </TextView>

        <TextView
            android:id="@+id/profile_showPIN_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="24dp"
            android:layout_below="@+id/profile_showPIN_info_helperquestion_desc"
            android:drawableStart="@drawable/baseline_account_box_24"
            android:drawablePadding="10dp"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/profile_showPIN_text_newPIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/profile_showPIN_text_name"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/baseline_pin_24"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:textIsSelectable="true"
            android:textSize="20sp" />

        <Button
            android:id="@+id/profile_showPIN_submitRemind"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/profile_showPIN_text_newPIN"
            android:layout_margin="20dp"
            android:text="@string/profile_showPIN_submitRemind" />

</RelativeLayout>
</ScrollView>
