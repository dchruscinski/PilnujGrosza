<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:weightSum="5"
    android:background="@color/whiteBackground"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Receipt">

    <!-- Row #1 - FAB "Add receipt" and description text view -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_weight="1"
        android:weightSum="4">

        <!-- FAB - "Dodaj paragon / Add receipt" -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/receipt_fab_addReceipt"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_weight="1"
            android:visibility="visible"
            android:backgroundTint="@color/flat_plus_background"
            app:tint="@null"
            app:srcCompat="@mipmap/flat_plus_foreground" />

        <!-- Text view - FAB description "Dodaj paragon / Add receipt" -->
        <TextView
            android:id="@+id/receipt_text_addReceipt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/receipt_text_addReceipt" />
    </TableRow>

    <!-- Row #2 - receipt -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <!-- TextView as filler -->
        <TextView
            android:id="@+id/receipt_text_test"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/receipt_text_test"/>
    </TableRow>

</TableLayout>