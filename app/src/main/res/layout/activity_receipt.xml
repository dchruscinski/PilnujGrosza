<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context="pl.dchruscinski.pilnujgrosza.Shopping">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp" >

    <RelativeLayout
        android:id="@+id/receipt_info"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_marginBottom="10dp" >

        <ImageView
            android:id="@+id/receipt_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="36dp"
            android:src="@drawable/baseline_receipt_long_24" />

        <TextView
            android:id="@+id/receipt_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/receipt_text_desc"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toEndOf="@id/receipt_icon"
            android:gravity="center_vertical"
            android:text="@string/receipt_text_name"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/receipt_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/receipt_text_desc"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginEnd="12dp"
            android:gravity="center_vertical"
            android:text="@string/receipt_text_date"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/receipt_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/receipt_icon"
            android:gravity="center_vertical"
            android:text="@string/sholist_rc_desc"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/receipt_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/receipt_info"
        android:layout_margin="20dp"
        android:background="?colorOnBackground"
        android:padding="1dp" />

    <Button
        android:id="@+id/receipt_button_edit"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/receipt_img"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text="@string/receipt_button_edit"/>

    <Button
        android:id="@+id/receipt_button_delete"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/receipt_img"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="@string/receipt_button_delete"/>

    <TextView
        android:id="@+id/receipt_text_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/receipt_button_edit"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textAlignment="center" />

    </RelativeLayout>

</ScrollView>