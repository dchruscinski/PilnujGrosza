<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBackground" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true" >

        <ImageView
            android:id="@+id/budget_editform_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/pilnuj_grosza_logo_foreground"
            android:scaleType="center"
            android:scaleX="3"
            android:scaleY="3">
        </ImageView>

        <TextView
            android:id="@+id/budget_editform_info_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_below="@+id/budget_editform_logo"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="@string/budget_edit_info_login"
            android:singleLine="true" >
        </TextView>

        <TextView
            android:id="@+id/budget_editform_fromDate_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="76dp"
            android:layout_below="@+id/budget_editform_info_create"
            android:text="@string/budget_createform_fromDate_info"
            android:textSize="20sp"
            android:textStyle="bold"
            android:singleLine="true" >
        </TextView>

        <TextView
            android:id="@+id/budget_editform_toDate_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/budget_editform_info_create"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="76dp"
            android:text="@string/budget_createform_toDate_info"
            android:textSize="20sp"
            android:textStyle="bold"
            android:singleLine="true" >
        </TextView>

        <TextView
            android:id="@+id/budget_editform_text_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:layout_below="@+id/budget_editform_fromDate_info"
            android:drawableStart="@drawable/baseline_today_black_24dp"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:singleLine="true" >
        </TextView>

        <TextView
            android:id="@+id/budget_editform_text_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            android:layout_below="@+id/budget_editform_fromDate_info"
            android:drawableStart="@drawable/baseline_today_black_24dp"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:singleLine="true" >
        </TextView>

        <EditText
            android:id="@+id/budget_editform_text_initialAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/budget_editform_text_startDate"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/baseline_paid_black_36dp"
            android:drawablePadding="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:inputType="numberDecimal"
            android:hint="@string/budget_editform_text_initialAmount"
            android:singleLine="true" >
        </EditText>

        <TextView
            android:id="@+id/budget_editform_text_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/budget_editform_text_startDate"
            android:layout_toEndOf="@id/budget_editform_text_initialAmount"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:textSize="24sp"
            android:textStyle="bold"
            android:singleLine="true" >
        </TextView>

        <EditText
            android:id="@+id/budget_editform_text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/budget_editform_text_initialAmount"
            android:layout_marginHorizontal="20dp"
            android:drawableStart="@drawable/baseline_article_black_24dp"
            android:drawablePadding="10dp"
            android:hint="@string/budget_editform_text_desc"
            android:singleLine="true" >
        </EditText>

        <Button
            android:id="@+id/budget_editform_submit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/budget_editform_text_desc"
            android:layout_margin="30dp"
            android:text="@string/budget_editform_submit" />

    </RelativeLayout>
</ScrollView>