<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBackground" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true" >

        <ImageView
            android:id="@+id/budget_delete_cont_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/pilnuj_grosza_logo_foreground"
            android:scaleType="center"
            android:scaleX="3"
            android:scaleY="3">
        </ImageView>

        <TextView
            android:id="@+id/budget_delete_cont_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_below="@+id/budget_delete_cont_logo"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="@string/budget_delete_cont_info"
            android:singleLine="true" >
        </TextView>

        <TextView
            android:id="@+id/budget_delete_cont_fromDate_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="76dp"
            android:layout_below="@+id/budget_delete_cont_info"
            android:text="@string/budget_delete_cont_fromDate_info"
            android:textSize="20sp"
            android:textStyle="bold"
            android:singleLine="true" >
        </TextView>

        <TextView
            android:id="@+id/budget_delete_cont_toDate_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/budget_delete_cont_info"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="76dp"
            android:text="@string/budget_delete_cont_toDate_info"
            android:textSize="20sp"
            android:textStyle="bold"
            android:singleLine="true" >
        </TextView>

        <TextView
            android:id="@+id/budget_delete_cont_text_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:layout_below="@+id/budget_delete_cont_fromDate_info"
            android:drawableStart="@drawable/baseline_today_black_24dp"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:focusable="false"
            android:singleLine="true" >
        </TextView>

        <TextView
            android:id="@+id/budget_delete_cont_text_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            android:layout_below="@+id/budget_delete_cont_fromDate_info"
            android:drawableStart="@drawable/baseline_today_black_24dp"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:focusable="false"
            android:singleLine="true" >
        </TextView>

        <TextView
            android:id="@+id/budget_delete_cont_text_initialAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/budget_delete_cont_text_startDate"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/baseline_paid_black_36dp"
            android:drawablePadding="20dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:singleLine="true" >
        </TextView>

        <TextView
            android:id="@+id/budget_delete_cont_text_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/budget_delete_cont_text_startDate"
            android:layout_toEndOf="@id/budget_delete_cont_text_initialAmount"
            android:layout_marginTop="25dp"
            android:gravity="start"
            android:textSize="24sp"
            android:textStyle="bold"
            android:singleLine="true" >
        </TextView>

        <TextView
            android:id="@+id/budget_delete_cont_text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/budget_delete_cont_text_initialAmount"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/baseline_article_black_24dp"
            android:drawablePadding="10dp"
            android:hint="@string/budget_delete_cont_text_desc"
            android:textSize="20sp"
            android:singleLine="true" >
        </TextView>

        <TextView
            android:id="@+id/budget_delete_cont_info_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/budget_delete_cont_text_desc"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/budget_delete_cont_info_delete"
            android:textAlignment="center"
            android:textSize="20sp" >
        </TextView>

        <Button
            android:id="@+id/budget_delete_cont_unlinkTrans"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/budget_delete_cont_info_delete"
            android:layout_marginTop="20dp"
            android:text="@string/budget_delete_cont_unlinkTrans" />

        <Button
            android:id="@+id/budget_delete_cont_deleteTrans"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/budget_delete_cont_unlinkTrans"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="@string/budget_delete_cont_deleteTrans" />



    </RelativeLayout>
</ScrollView>