<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true" >

        <ImageView
            android:id="@+id/sholist_editform_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/pilnuj_grosza_logo_foreground"
            android:scaleType="center"
            android:scaleX="3"
            android:scaleY="3">
        </ImageView>

        <TextView
            android:id="@+id/sholist_editform_info_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_below="@+id/sholist_editform_logo"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="@string/sholist_edit_info_login" >
        </TextView>

        <EditText
            android:id="@+id/sholist_editform_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sholist_editform_info_create"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/baseline_article_24"
            android:drawablePadding="10dp"
            android:hint="@string/sholist_editform_text_name"
            android:singleLine="true" >
        </EditText>

        <TextView
            android:id="@+id/sholist_editform_text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="24dp"
            android:layout_below="@+id/sholist_editform_text_name"
            android:drawableStart="@drawable/baseline_today_24"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:focusable="false"
            android:clickable="true"
            android:singleLine="true" >
        </TextView>

        <EditText
            android:id="@+id/sholist_editform_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sholist_editform_text_date"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/baseline_description_24"
            android:drawablePadding="10dp"
            android:hint="@string/sholist_editform_text_description"
            android:singleLine="true" >
        </EditText>

        <Button
            android:id="@+id/sholist_editform_submit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/sholist_editform_text_description"
            android:layout_margin="20dp"
            android:text="@string/sholist_editform_submit" />


</RelativeLayout>
</ScrollView>